<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"        "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.xmy.blog.dao.TagDao">    <!-- 新增保存分类-->    <insert id="saveTag" parameterType="com.xmy.blog.entity.Tag">        insert into blog.t_tag values (#{id},#{name});    </insert>    <!--根据id查询分类-->    <select id="getTag" resultType="com.xmy.blog.entity.Tag">        select id from blog.t_tag where id = #{id}    </select>    <!--查询所有分类-->    <select id="getAllTag" resultType="com.xmy.blog.entity.Tag">        select * from blog.t_tag    </select>    <resultMap id="tag" type="com.xmy.blog.entity.Tag">        <id property="id" column="tid"/>        <result property="name" column="name"/>        <collection property="blogs" ofType="com.xmy.blog.entity.Blog">            <id property="id" column="bid"/>            <result property="title" column="title"/>            <result property="tagId" column="tag_id"/>        </collection>    </resultMap>    <!--分类页面查询-->    <select id="getAllTagAndBlog" resultMap="tag">--         select t.id tid, t.name, b.id bid, b.title,b.tag_id from blog.t_tag t,blog.t_blog b where t.id = b.tag_id             select  * from goods;    </select>    <!--根据分类名称来查询-->    <select id="getTagByName" resultType="com.xmy.blog.entity.Tag">        select * from blog.t_tag where name = #{name}    </select>    <!--编辑修改分类-->    <update id="updateTag" parameterType="com.xmy.blog.entity.Tag">        update blog.t_tag set name = #{name} where id = #{id};    </update>    <!--删除分类-->    <delete id="deleteTag" >        delete from blog.t_tag where id = #{id}    </delete></mapper>